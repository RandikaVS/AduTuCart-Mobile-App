<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/order_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        android:backgroundTint="@color/color_spicy"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingClass">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order#"
            android:textStyle="bold"
            android:padding="10dp"/>

            <TextView
                android:id="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="order_id"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address "
                android:textStyle="bold"
                android:layout_marginTop="-15dp"
                android:padding="10dp"/>

                <TextView
                    android:id="@+id/order_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-15dp"
                    android:hint="address"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Type  "
                    android:textStyle="bold"
                    android:layout_marginTop="-15dp"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/order_payment_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-15dp"
                    android:hint="payment_type"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/order_list_rv"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:layout_height="wrap_content"/>




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Total : "
                android:padding="10dp"/>

                <TextView
                    android:id="@+id/order_subtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="sub_total"
                    android:textStyle="bold"
                    android:padding="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Status"
                android:padding="10dp"/>

                <LinearLayout
                    android:layout_marginLeft="70dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rider Name : "
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waiting time : "
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rider_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="8"
                        android:hint="rider"
                        android:textStyle="italic"/>

                    <TextView
                        android:id="@+id/waiting_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="not set"
                        android:textStyle="italic"/>
                </LinearLayout>


            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center_vertical">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">


            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/status_circle_view"
                android:text="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/to_ship"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/status_not_completed_circle_view"
                    android:text="2"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                    <View
                        android:id="@+id/to_ship_bar"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/red_btn_bg_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To ship"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/to_receive"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/status_not_completed_circle_view"
                    android:text="3"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                    <View
                        android:id="@+id/to_receive_bar"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/red_btn_bg_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To receive"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/completed"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/status_not_completed_circle_view"
                    android:text="4"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                    <View
                        android:id="@+id/completed_bar"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/red_btn_bg_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/completed_last"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/status_not_completed_circle_view"
                    android:text="5"/>





            </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>