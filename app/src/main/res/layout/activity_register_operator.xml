<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".loginRegister.RegisterOperatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_arrow"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:shadowColor="#D3B7A6"
            android:shadowDx="7"
            android:layout_marginTop="10dp"
            android:shadowDy="7"
            android:shadowRadius="10"
            android:fontFamily="@font/nova_square"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(OPERATOR)"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:shadowColor="#D3B7A6"
            android:shadowDx="7"
            android:shadowDy="7"
            android:shadowRadius="10"
            android:fontFamily="@font/nova_square"
            />

        <LinearLayout
            android:id="@+id/selectedImageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >

            <ImageView
                android:layout_marginLeft="40dp"
                android:id="@+id/selectedImage"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                />

                <ImageView
                    android:id="@+id/cancelImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="-105dp"
                    android:background="@drawable/cancel_button"/>

            </LinearLayout>

        </LinearLayout>


            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/add_photo"/>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#954411"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="5dp"
            >

            <EditText
                android:id="@+id/email_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/nova_square"
                android:inputType="textEmailAddress"
                android:hint="EMAIL ADDRESS"
                android:textColor="#FFF3E0"
                android:textColorHint="#FFF3E0"
                android:textSize="20sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#954411"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="5dp"
            >

            <EditText
                android:id="@+id/password_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/nova_square"
                android:hint="PASSWORD"
                android:inputType="textPassword"
                android:textColor="#FFF3E0"
                android:textColorHint="#FFF3E0"
                android:textSize="20sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#954411"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="5dp"
            >

            <EditText
                android:id="@+id/name_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/nova_square"
                android:hint="NAME"
                android:inputType="textPersonName"
                android:textColor="#FFF3E0"
                android:textColorHint="#FFF3E0"
                android:textSize="20sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#954411"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="5dp"
            >

            <EditText
                android:id="@+id/cellphone_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/nova_square"
                android:hint="CELLPHONE NO."
                android:inputType="phone"
                android:textColor="#FFF3E0"
                android:textColorHint="#FFF3E0"
                android:textSize="20sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#010000"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="50dp"
            >

            <ProgressBar
                android:id="@+id/reg_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/register_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="REGISTER"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>